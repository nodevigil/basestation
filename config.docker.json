{
  "database": {
    "url": "postgresql://simon:devpassword@postgres:5432/depin",
    "echo_sql": false,
    "pool_size": 15,
    "max_overflow": 25,
    "pool_timeout": 30,
    "pool_recycle": 3600
  },
  "scanning": {
    "scan_interval_days": 7,
    "sleep_between_scans": 3.0,
    "timeout_seconds": 45,
    "max_concurrent_scans": 1,
    "enable_vulnerability_scanning": true,
    "enable_ssl_testing": true
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s %(levelname)s [%(name)s]: %(message)s",
    "disable_sqlalchemy": true
  },
  "recon": {
    "sui_rpc_url": "https://fullnode.mainnet.sui.io",
    "dns_timeout": 10.0,
    "max_retries": 3
  },
  "publish": {
    "enabled_publishers": ["database", "console", "json_file"],
    "blockchain_endpoint": null,
    "api_endpoint": null
  }
}
